<%- include("partials/header") %> 
<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <label>Title</label>
        <input type="text" name="postTitle" autocomplete="off" class="form-control">
    </div>
    <div class="form-group">
        <label>Post</label>
        <textarea name="postContent" class="form-control"></textarea>
    </div>    
    <button type="submit" class="btn btn-primary">Publish</button>
</form>

